<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.robinj.rot13.About$PlaceholderFragment">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/imgLogo"
		android:src="@drawable/ic_launcher"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:minHeight="64dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Rot13"
		android:id="@+id/plain"
		android:layout_marginBottom="20dp"
		android:typeface="monospace"
		android:textSize="32dp"
		android:layout_above="@+id/imgLogo"
		android:layout_alignRight="@+id/imgLogo"
		android:layout_alignEnd="@+id/imgLogo"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:gravity="center" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Edg13"
		android:id="@+id/encoded"
		android:typeface="monospace"
		android:textSize="32dp"
		android:layout_marginTop="20dp"
		android:layout_below="@+id/imgLogo"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:gravity="center" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="{version}"
		android:id="@+id/version"
		android:layout_below="@+id/encoded"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp" />

	<Button
		style="?android:attr/buttonStyleSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/dev"
		android:layout_below="@+id/version"
		android:layout_centerHorizontal="true"
		android:id="@+id/dev"
		android:onClick="btnDev_clicked"
		android:layout_marginTop="4dp" />

</RelativeLayout>
